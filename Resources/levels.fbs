namespace butcher;

table LevelsData { 
	levels:[LevelData]; 
}

enum GeneratorType:byte { 
	DungeonGenerator = 0
}

table LevelData {
	id:uint;
	generator:GeneratorType;
	map_template:string;
	design_file:string;
	
	width:int;
	height:int;
	min_room_size:int;
	max_room_size:int;
	max_rooms:int;
	multiple_room_exit_chance:int;
	windy_chance:int;
}

root_type LevelsData;