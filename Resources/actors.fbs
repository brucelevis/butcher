namespace butcher;

table ActorsData { 
	actors:[ActorData]; 
}

enum ActorType:byte { 
	Monster = 0, 
	Player = 1,
	Item = 2 ,
	Object = 3
}

table ActorData {
	//Actor
	id:uint;
	type:ActorType;
	name:string;
	blocks:bool;
	transparent:bool;
	sprite_file:string;

	//Character
	hp:uint;
	attack:ushort;
	defense:ushort;
	damage:ushort;
	damage_reduction:ushort;
}

root_type ActorsData;